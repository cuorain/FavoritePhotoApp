<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutFolderItem">

    <TextView
        android:id="@+id/tvFolderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/folderNameFontSize"
        android:paddingVertical="@dimen/folderNamePadding"
        android:paddingStart="@dimen/folderNamePadding"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toStartOf="@id/layoutFolderItem"
        app:layout_constraintTop_toTopOf="@id/layoutFolderItem"
        />

</androidx.constraintlayout.widget.ConstraintLayout>