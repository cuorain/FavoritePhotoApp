<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tvNoFileMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtNoFileFind"
        android:textSize="@dimen/noDataFontSize"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rvFileList"
        android:name="com.example.originalfilemanager.FileListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".FileListFragment"
        tools:listitem="@layout/file_list_item" />
</LinearLayout>